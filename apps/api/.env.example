# Database
DATABASE_URL=postgresql://user:password@localhost:5432/tresta

# Server
PORT=8000

# Clerk Webhook
CLERK_WEBHOOK_SIGNING_SECRET=

# Clerk API (if needed)
CLERK_PUBLISHABLE_KEY=
CLERK_SECRET_KEY=

# Azure Blob Storage
AZURE_STORAGE_ACCOUNT_NAME=
AZURE_STORAGE_ACCOUNT_KEY=
AZURE_STORAGE_CONTAINER_NAME=media

# CORS Configuration for Azure Blob Storage
# Comma-separated list of allowed origins for direct browser uploads
# Example: http://localhost:3000,https://yourdomain.com
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# ============================================
# Notification System
# ============================================

# Redis (required for notifications)
REDIS_URL=redis://localhost:6379
# For Upstash: rediss://default:password@host:port

# Feature Flags
ENABLE_REAL_NOTIFICATIONS=false
ENABLE_REAL_EMAILS=false
ALLOW_ADMIN_SENDS=false

# Services (server-side only - never expose to client)
ABLY_API_KEY=
RESEND_API_KEY=

# Security
JWT_SECRET=

# Monitoring (optional)
SLACK_WEBHOOK_URL=

# App URL (for email links)
APP_URL=http://localhost:3000

# Email
EMAIL_FROM=Tresta <notifications@tresta.app>
