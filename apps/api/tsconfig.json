{
  "extends": "@workspace/typescript-config/base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@workspace/database/*": ["../../packages/database/src/*"],
      "@workspace/types": ["../../packages/types/src/index.ts"],
      "@workspace/types/*": ["../../packages/types/src/*"]
    },
    "allowImportingTsExtensions": false,
    "noEmit": false,
    "outDir": "dist"
  },
  "include": [
    "src/**/*",
    "types/**/*.d.ts",
    "types/**/*.ts"
  ]
}
